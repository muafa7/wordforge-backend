generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ---------------------------------------------------------
// MODELS
// ---------------------------------------------------------

model Dictionary {
  id        Int      @id @default(autoincrement())
  name      String
  words     Word[]
  createdAt DateTime @default(now())
}

model Word {
  id           Int    @id @default(autoincrement())
  text         String @unique
  dictionaryId Int
  dictionary   Dictionary @relation(fields: [dictionaryId], references: [id])
}

model Game {
  id        Int      @id @default(autoincrement())
  grid      Json
  createdAt DateTime @default(now())
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String
}
